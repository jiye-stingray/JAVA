package sangsi;

class Sports{
	private String name;
	int player;
	String team;
	
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	void rule() {
		System.out.println("규칙");
	}
	public Sports(String name) {
		// TODO Auto-generated constructor stub
		this.name = name;
		
	}
}

class BaseBall extends Sports{
	int player;

	public BaseBall(String name, int i) {
		super(name);
		this.player = i;
		// TODO Auto-generated constructor stub
	}

	
	void rule() {
		System.out.println("야구 규칙을 따른다");
	}
}
class PingPong extends Sports{
	public PingPong(String name) {
		super(name);
		// TODO Auto-generated constructor stub
	}

	String team = "복식";
	
	void rule() {
		System.out.println("탁구 규칙을 따름");
	}
}

public class SportTest {

	public static void main(String[] args) {
		
		Sports[] s = {new BaseBall("BaseBall",9),  new PingPong("PingPong")};
	
		
		
		System.out.println("경기종목: "+s[0].getName());
		System.out.println("플레이어: "+ ((BaseBall)s[0]).player);
		System.out.printf("경기규칙: ");
		s[0].rule();
		
		System.out.println("경기종목: "+s[1].getName());
		System.out.println("플레이어: "+ ((PingPong)s[1]).team);
		System.out.printf("경기규칙: ");
		s[1].rule();
	}

}
